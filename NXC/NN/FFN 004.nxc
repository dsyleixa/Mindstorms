       printf1g( 4+5*6*3 ,49-(8*z),"%1d"  , ibuf);
    }
  }
}



/***************************************************************************/


void LearnPerceptronRule() { // Perceptron-Lern-Modus
  int ErrorCount;
  int in; // Sensor-Kombinationen
  int i; // Anzahl Inputs
  int j; // Anzahl Ausgabe-Neurons
  int sollOut;
  int key;


 do
 {


  ErrorCount=0;
  PlayTone(440,100);
  MenuText="-- << ok >> ++";


    ForwardPropagation();
    Wait(1);

    for (j=0;j<2;j++) // 1 bis Anzahl Ausgabe-Neuron
    {

      sollOut=Nout[j];
      MenuText="-- << ok >> ++";
      
      printf1g( 4+5*6*3 ,49-(8*z),"%1d"  , sollOut);

      do // erzeugten Output berichtigen
      {
        key=ReadKey();

        if (key==BTNLEFT) { if (sollOut>0) sollOut=0; }
        else
        if (key==BTNRIGHT) { if (sollOut==0) sollOut=1; }


        Wait(10);
      } while ((key!=2)&&(key!=4));

      println(5, " ");

      //...................................................

      //....................................................

                                        // Lern-Modus START
      //....................................................
      if (sollOut==Neuron0[j].out ) // teachOut korrekt
      {
            PlaySound(soundBlip);
            PlaySound(soundBlip);
            wait1Msec(100);
      }
         //....................................................
      if (sollOut!=Neuron0[j].out) // teachOut falsch
      {
             PlaySound(soundException);
             wait1Msec(100);
        ErrorCount+=1;
             //...................................................
                                        // LERNEN

        for (i=0; i<=L0; i++) // fuer alle i (Inputs)
        { // Wichtungen anpassen (Delta-Regel)

                 Neuron0[j].w[i] = Neuron0[j].w[i]+ (lf *Neuron0[j].in[i]*(sollOut-Neuron0[j].out));
        }

        if (sollOut!=Neuron0[j].out) // Schwelle anpassen (Delta-Regel, erweitert)
        {
                 Neuron0[j].th = Neuron0[j].th + (lf *(sollOut-Neuron0[j].out));
        }
        //...................................................
      } // if (sollOut!=Neuron0[j].out)

   } // for j


 } while (ErrorCount>0);


}




/***************************************************************************/


task main() {
   Init();
   InitAllNeurons();
   InitAllSensors();

   start DisplayValues;

   while(true) {

      ForwardPropagation();



   }

}


