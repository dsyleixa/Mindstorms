    FontTextOut(0,57,__gFTFontName,"i..................................soll...out");

    for(i=0; i<ni; i++) {
       ibuf= Ni[0][i];
       printf1g(0, 49-(8*i),"%1d",ibuf);
    }


    for(z=0; z<nz; z++) {
    /*
       for (i=0; i<ni; i++) {
          fbuf=Nw[z][i];
          printf1g(10+i*6*3 ,49-(8*z),"%2.1f", fbuf);
       }
       fbuf=Nthr[z];
       printf1g(10+4*6*3 ,49-(8*z),"%2.1f", fbuf);
       
    */

